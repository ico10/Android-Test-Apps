<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/titleFragment">

    <fragment
        android:id="@+id/titleFragment"
        android:name="com.sfa.android.concentration4.game_intro.GameIntroFragment"
        android:label="TitleFragment"
        tools:layout="@layout/fragment_title">
        <action
            android:id="@+id/action_titleFragment_to_gameFragment"
            app:destination="@id/gameFragment" />
    </fragment>
    <fragment
        android:id="@+id/gameFragment"
        android:name="com.sfa.android.concentration4.game.GameFragment"
        android:label="GameFragment"
        tools:layout="@layout/fragment_game">
        <action
            android:id="@+id/action_gameFragment_to_gameWinFragment"
            app:destination="@id/gameWinFragment"
            app:popUpTo="@id/titleFragment" />
        <argument
            android:name="numberOfCards"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/gameWinFragment"
        android:name="com.sfa.android.concentration4.gamewin.GameWinFragment"
        android:label="GameWinFragment"
        tools:layout="@layout/fragment_game_win">
        <action
            android:id="@+id/action_gameWinFragment_to_titleFragment"
            app:destination="@id/titleFragment" />
        <argument
            android:name="attempts"
            app:argType="integer" />
    </fragment>
</navigation>